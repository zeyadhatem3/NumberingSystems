<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:orientation="vertical"
    android:background="#d7d1d1">

    <EditText
        android:id="@+id/binaryText"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="enter binary number (zeros ,ones ) ... "
        android:inputType="number|text"
        android:background="@drawable/edittextstyle"
        android:layout_weight="2"/>

    <Button
        android:text="convert to Decimal "
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="15dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button856"
        android:layout_weight="1"
        android:onClick="BinaryToDecimal" />
        android:onClick="BinaryToDecimal" />

    <Button
        android:text="convert to octal "
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:layout_marginBottom="15dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button83"
        android:layout_weight="1"
        android:onClick="BinaryToOctal" />
        android:onClick="BinaryToOctal" />

    <Button
        android:text="convert to hexadecimal "
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:id="@+id/button86"
        android:layout_weight="1"
        android:onClick="BinaryToHex" />
        android:onClick="BinaryToHex" />

    <TextView
        android:id="@+id/binaryView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="result ..."
        android:inputType="text"
        android:background="@drawable/edittextstyle"
        android:layout_weight="2"
        android:textSize="25sp" />
</LinearLayout>